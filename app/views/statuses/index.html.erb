<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-primary" %>
<br><br><br>
<% @statuses.each do |status| %>

  <div class="status">
    <div class="row">
      <div class="span1">
      <%= link_to image_tag(status.user.try(:gravatar_url)), profile_path(status.user) %>
      </div>
      <div class="span7">
        <strong><%= status.user.full_name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
          <%= link_to time_ago_in_words(status.created_at) + " ago", status %>

          <span class="admin">
          | <%= link_to "Edit", edit_status_path(status), confirm: "Are you sure you want to edit?????" %> | 
          <%= link_to "Delete", status, method: :delete, confirm: "Are you sure you want to kill it forever????" %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <% end %>